{
  "name": "djs",
  "packageManager": "yarn@3.2.4",
  "private": true,
  "type": "module",
  "scripts": {
    "lint": "yarn run lint:js && yarn run lint:json && yarn run lint:md && yarn run lint:yml",
    "lint:js": "eslint packages --ext .ts,.js",
    "lint:json": "prettier --check **/(**|.**).json",
    "lint:md": "prettier --check **/(**|.**).md",
    "lint:yml": "prettier --check **/(**|.**).(yml|yaml)",
    "prettier:check": "prettier --check ./",
    "prettier:write": "prettier --write ./",
    "postinstall": "husky install",
    "test": "yarn run lint"
  },
  "lint-staged": {
    "*.(js|ts)": "yarn eslint",
    "**/*": "yarn prettier --check --ignore-unknown"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-standard-with-typescript": "latest",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.3",
    "prettier": "2.7.1",
    "typescript": "*"
  }
}
